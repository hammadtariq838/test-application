<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit post</h1>
    <div class="col-6 offset-3">
        <form action="/posts/<%=post.id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="post[title]"
                    value="<%=post.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="body">body</label>
                <textarea class="form-control" type="text" id="body" name="post[body]"
                    required><%= post.body%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update post</button>
            </div>
        </form>
        <a href="/posts/<%= post._id%>">Back To post</a>

    </div>
</div>